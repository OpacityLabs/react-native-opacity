{
  "manifest_version": 2,
  "name": "Opacity Extension",
  "version": "1.0",
  "description": "Opacity extension for GeckoView",
  "applications": {
    "gecko": {
      "id": "webview@opacitylabs.com",
      "strict_min_version": "68.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["webRequest", "activeTab", "webRequestBlocking", "cookies", "*://*/*",  "<all_urls>", "nativeMessaging",
    "nativeMessagingFromContent",
    "geckoViewAddons"]
}
